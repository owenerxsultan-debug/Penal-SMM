			<div class="orders-history ">
				<div class="bg"></div>
				<div class="divider-top"></div>
				<div class="divider-bottom"></div>
				<div class="container-fluid">

					<div class="row px-lg-4">
						<div class="col">
							<div class="orders-history__margin-table">
								<div class="table-bg component_table ">
									<div class="table-wr ">
										<table class="table">
											<thead>
												<tr>
													 
																			</div>
																		</div>
																	</form>
																</div>
															</div>
														</div>
													</th>
												</tr>
											</thead>
										</table>
										<div class="table-responsive table-responsive__search ">
											<table class="table">
												<thead>
													<tr>
 
														<th>Title</th>
														<th class="width-service-name">Content</th>

														<th class="nowrap">Date</th>
													 


													</tr>
												</thead>
												<tbody>
{% for new in newsList %}
														<tr>
														 
															<td> <img width="30" class="mr-1" src="/img/icons/{{ new['news_icon'] }}.png">{{ new['news_title'] }}</td>
															<td>

															 {{ new['news_content'] }}
															</td>
															<td>{{ new['news_date'] }}</td>


														</tr>
													{% endfor %}


												</tbody>
											</table>
