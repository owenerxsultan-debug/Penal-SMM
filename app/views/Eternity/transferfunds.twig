{% include 'header.twig' %}
<div class="wrapper-content__body" style="    margin-top: 0px;">
 <div class="well">
<main class="app-main">
    <div class="page-content">
        <div class="container-fluid">
		
		
			 {% if success %}
										  <div class="alert alert-dismissible alert-success">
											  {{ successText }}
										  </div>
										{% endif %}
										
										{% if error %}
										  <div class="alert alert-dismissible alert-danger">
											{{ errorText }}
										  </div>
										{% endif %}
            <div class="row mt-2">
                <div class="col-lg-6">
                    <div class="card mb-5">
                        <div class="py-4 px-lg-3 px-4">
						
									<div class="t-head th-3">
										<div class="" style="margin-bottom: 15px;">
											<div class="col-lg-2">
											
											</div>
											<div class="col-lg-10 col-12">
												<h2>{{ lang['transferfunds.bank.transferToFriends'] }}</h2>
												<p>{{ lang['transferfunds.bank.transferToFriendsSmall'] }}</p>
											</div>
										</div>
									</div>
									
                                    <form  method="post" action="transferfunds" >
										

                                        <div class="fga mb-2">
                                            <label class="fla" for="amount">Recipient Username</label>
                                            <div class="fg">
                                                
                                                <input type="text" name="username" class="form-control" placeholder="{{ lang['smmspot.transferfunds.payment.telephone.title'] }}" required value="{{ data['username'] }}">
                                            </div>
                                        </div>

                                        <div class="fga mb-4">
                                            <label class="fla" for="amount">{{ lang['transferfunds.amount'] }}</label>
                                            <div class="fg">
                                                
                                                <input type="number" class="form-control" name="amount" id="amount" value="{{ data['amount'] }}">
                                            </div>

                                        </div>
        
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-4 mb-mb-0">
                                                <button type="submit" class="btn btn-primary btn-block">
                                                Transfer
                                                </button>
                                            </div>
                                            <div class="col-md-6 col-12 mb-1 mb-mb-0">
                                                <a href="/tickets" class="btn btn-primary btn-block" style="color:#fff;">
                                                    Support Center  
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                        </div>
                    </div><!-- card -->
                </div><!-- col -->


            </div>
		
        </div>
    </div>
</main>

	</div>
	</div>
